@model KENTAS.Helper.Common.News_api

@{
    ViewBag.Title = "Haber Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container bgwhite mt-4">

    <div class="row p-1">

        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 radius_contains p-3" style="background-color:#00a0af;background-image:url(/Content/images/f_bg.jpg)">
            <h6 class="pl-3 my-auto" style="color:white">HABERLER</h6>
        </div>

    </div>
    <div class="row">

        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
            <div id="news" class=" owl-carousel  owl-theme newsPadding ">
                @foreach (var item in Model.Resimler)
                {
                    <div class="item radius_contains border p-1 ">
                        <img src="@Url.Content(item.nimgUrl)" class="img-fluid radius_contains" style="width:100%; height:450px;" />
                    </div>
                }
            </div>
        </div>

        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 px-5 py-3 ">
            <div class="row">
                <h6 class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 p-0 text-uppercase" style="color: midnightblue;"> @Html.DisplayFor(model => model.newsHeaderDesc)</h6>
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 p-0 " style=" overflow:auto; color:midnightblue;">
                    @Html.Raw(Model.newsDesc)
                </div>
            </div>

        </div>

    </div>


</div>


