@model  List<KENTAS.Helper.getGalryModel>

@{
    ViewBag.Title = "Resim Galerisi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.11.1/baguetteBox.css" rel="stylesheet" />
    <style type="text/css">

        .filter_btn {
            display: block;
            list-style: none;
            width: 100%;
            text-align: center;
        }

            .filter_btn li {
                display: inline-block;
            }
        .my_btn {
            text-align: center;
            height: 250px;
            width: 250px;
            display: flex;
            background: url(/Uploads/PhotoGalery/big-6231-1-2020-11-11-1605096212.jpg) center center no-repeat;
            background-size: cover;
            color: #fff;
            text-shadow: 1px 1px black;
            text-align: center;
            flex-direction: column-reverse;
        }
    </style>
}

<div class="container bgwhite mt-4 ">

    <div class="row p-1">

        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 radius_contains p-3" style="background-color:#00a0af; background-image:url(/Content/images/g_bg.png)">
            <h6 class="pl-3 my-auto" style="color:white">GALERİ</h6>
        </div>

    </div>

    <h6 class="my-auto p-2" style="color:midnightblue">KENTAŞ FOTOĞRAF GALERİ - <a href="../Galeri/">Geri Dön <i class="fa fa-backward"></i></a></h6>

    <div class="panel" style="width:100%">
        <div class="panel-body p-4">

            <div class="pt-2 row media tz-gallery " style="height:800px; overflow-x:hidden;">

                @if (Model.Count == 0)
                {
                    <div style="height:calc(100vh - 890px); text-align:center; vertical-align:middle; ">
                        <h1 class="mt-4">Resim Bulunamadı. <small style="font-size:1.3rem;"><a href="../Galeri/Index">Geri dön</a></small></h1>
                    </div>
                }

                @foreach (var item in Model)
                {
                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12">
                        <a class="lightbox" href="@Url.Content(item.photoGaleryImage)">
                            <img class="img-rounded" src="@Url.Content(item.photoGaleryImage)" />
                        </a>

                    </div>
                }
            </div>
        </div>
    </div>


</div>


@section scripts{
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.11.1/baguetteBox.js"></script>

    <script type="text/javascript">
        $((_$) => {
            baguetteBox.run('.tz-gallery');
        });
    </script>

}
