@model IEnumerable<KENTAS.Models.OrganizationChart>

@{
    ViewBag.Title = "Organizasyon Şeması";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}


<table class="table">
    <tr>
        <th class="text-center">
            ORGANİZASYON ŞEMASI
        </th>
       
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="text-center" >
            <img src="@Url.Content(@item.OrganizationChartPhoto)" alt="organizasyon" />
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id = item.OrganizationChartId }, new { @class = "btn btn-sm btn-success" })

        </td>
    </tr>
}

</table>
