@model KENTAS.Models.Advert

@{
    ViewBag.Title = "Duyuru Sil";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<h3>Silmek istediğinize emin misiniz?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
          BAŞLIK AÇIKLAMA
        </dt>

        <dd>
            @Html.Raw(Model.adHeaderDesc)
        </dd>

        <dt>
          AÇIKLAMA
        </dt>

        <dd>
            @Html.Raw(Model.adDesc)
        </dd>

        <dt>
            SEKME
        </dt>

        <dd>
            @Html.Raw(Model.adTab)
        </dd>

        <dt>
           FOTOĞRAF
        </dt>

        <dd>
            <img src="@Url.Content(Model.adImage)" style="height:60px;" alt="Advert" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-danger" /> |
            @Html.ActionLink("Geri Dön", "Index")
        </div>
    }
</div>
