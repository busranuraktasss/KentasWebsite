@model KENTAS.Models.JobApplicationForm
@{
    ViewBag.Title = "Sil";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<h3>Silmek İstediğinize emin misiniz?</h3>
<div>
    <h4>Başvuru</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Ad Soyad</dt>
        <dd>@Html.Raw(Model.Ad) @Html.Raw(Model.Soyad)</dd>
        <dt>Tel</dt>
        <dd>@Html.Raw(Model.CepTel)</dd>
        <dt>Cv</dt>
        <dd><a href="@Model.CVUrl" download>Cv Görüntüle</a></dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-danger" /> |  @Html.ActionLink("Geri Dön", "Index")
        </div>
    }
</div>

