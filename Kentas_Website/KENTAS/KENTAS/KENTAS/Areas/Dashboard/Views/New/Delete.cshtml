@model KENTAS.Models.News

@{
    ViewBag.Title = "Haber Sil";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<h2>Sil</h2>

<h3>Silmek İstediğinize Emin misiniz?</h3>
<div>
    <h4>Haberler</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            BAŞLIK AÇIKLAMA
        </dt>

        <dd>
            @Html.Raw(Model.newsHeaderDesc)
        </dd>

        <dt>
            AÇIKLAMA
        </dt>

        <dd>
            @Html.Raw(Model.newsDesc)
        </dd>

        <dt>
            FOTOĞRAF
        </dt>

        <dd>
            <img src="@Url.Content(Model.newsImage)" style="height:60px;" alt="New" />
        </dd>

        <dt>
            SEKME
        </dt>

        <dd>
            @Html.Raw(Model.newsTabItem)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-danger" /> |
            @Html.ActionLink("Geri Dön", "Index")
        </div>
    }
</div>
