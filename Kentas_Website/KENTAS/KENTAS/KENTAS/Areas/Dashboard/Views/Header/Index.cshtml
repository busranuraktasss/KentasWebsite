@model IEnumerable<KENTAS.Models.Header>

@{
    ViewBag.Title = "Başkan Bilgileri";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <tr>
        <th class="text-center">
            BAŞKAN LOGO
        </th>
        <th class="text-center">
            BAŞKAN ADI
        </th>
        <th class="text-center">
            BAŞKAN ÜNVAN
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            <img src="@Url.Content(@item.headerPresidentLogo)"  alt="header" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.headerPresidentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.headerPresidentDescription)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id=item.headerId }, new { @class = "btn btn-sm btn-success" }) 

        </td>
    </tr>
}

</table>
