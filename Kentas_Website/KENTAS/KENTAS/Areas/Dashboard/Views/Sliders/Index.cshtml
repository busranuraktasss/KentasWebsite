@model IEnumerable<KENTAS.Models.Slider>

@{
    ViewBag.Title = "Slider";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}



<div class=" btn btn-info" style="color:InfoText;">
    @Html.ActionLink("Yeni Ekle", "Create")
</div>
<table class="table table-bordered table-striped table-responsive-sm">
    <tr>
        <th class="text-center">
            SLİDER AÇIKLAMA
        </th>
        <th class="text-center">
            SLİDER FOTOĞRAF
        </th>
        <th class="text-center">
            İŞLEMLER
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.Raw(item.sldierDesc)
            </td>
            <td>
                <img src="@Url.Content(item.sliderImage)" style="width:100px; height:auto;" />
            </td>
            <td>
                <div class="btn-group">
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.sliderId }, new { @class = "btn btn-sm btn-success" })
                    @Html.ActionLink("Si l", "Delete", new { id = item.sliderId }, new { @class = "btn btn-sm btn-danger" })
                </div>

            </td>
        </tr>
    }

</table>
