@model KENTAS.Models.Advert

@{
    ViewBag.Title = "Duyuru Güncelle";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

<h2>Duyuru Güncelle</h2>

@using (Html.BeginForm("Edit", "Adverts", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.adId)

        <div class="form-group">
            @Html.LabelFor(model => model.adHeaderDesc,"BAŞLIK AÇIKLAMA", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.adHeaderDesc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.adHeaderDesc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.adDesc,"AÇIKLAMA", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea name="adDesc" class="ckeditor">@Model.adDesc</textarea>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.adTab,"SEKME", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.adTab, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.adTab, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.adImage, "FOTOĞRAF", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                <div class="col-md-5">
                    <input type="file" name="adImage" class="form-control" multiple="multiple" placeholder="Dosya Seç" />
                    @Html.ValidationMessageFor(model => model.adImage, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-5">
                    <img src="@Url.Content(Model.adImage)" style="height:60px;" alt="Activite" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>
