@model KENTAS.Models.HumanResource

@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

@using (Html.BeginForm("Edit", "HumanResource", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.HumanResourceId)

        <div class="form-group">
            @Html.LabelFor(model => model.HumanResourcePhoto,"İNSAN KAYNAKLARI FOTOĞRAFI", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="HumanResourcePhoto" class="form-control" required placeholder="Dosya Seç." />
                @Html.ValidationMessageFor(model => model.HumanResourcePhoto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HumanResourceTitle,"İNSAN KAYNAKLARI BAŞLIK", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HumanResourceTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HumanResourceTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HumanResourceDescription,"İNSAN KAYNAKLARI AÇIKLAMA", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea name="HumanResourceDescription" class="ckeditor">@Model.HumanResourceDescription</textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
