@model IEnumerable<KENTAS.Models.HumanResource>

@{
    ViewBag.Title = "İnsan Kaynakları";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered table-striped table-responsive-sm">
    <tr>
        <th>
          İNSAN KAYNAKLARI FOTOĞRAFI
        </th>
        <th>
          İNSAN KAYNAKLARI BAŞLIK
        </th>
        <th>
          İNSAN KAYNAKLARI AÇIKLAMA
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Url.Content(@item.HumanResourcePhoto)" alt="humanresource" style="width:200px; height:200px;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HumanResourceTitle)
        </td>
        <td>
            @Html.Raw(item.HumanResourceDescription)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id = item.HumanResourceId }, new { @class = "btn btn-sm btn-success" })
        </td>
    </tr>
}

</table>
