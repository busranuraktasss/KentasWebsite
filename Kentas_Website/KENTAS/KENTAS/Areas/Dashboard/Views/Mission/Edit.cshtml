@model KENTAS.Models.Mission

@{
    ViewBag.Title = "Misyonumuz Güncelle";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}
    <script type="text/javascript">
    CKEDITOR.replace('editor')
    </script>

<h2>Güncelle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.missionId)

        <div class="form-group">
            @Html.LabelFor(model => model.missionDesc,"AÇIKLAMA", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea name="missionDesc" class="ckeditor">@Model.missionDesc</textarea>
                
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Güncelle" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>
