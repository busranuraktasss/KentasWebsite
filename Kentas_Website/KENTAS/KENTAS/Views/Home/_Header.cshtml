                    <img src="@Url.Content(data.headerPresidentLogo)" style="width:80px; height:90px; " class="rounded-circle " alt="..." />

                </div>
            </div>

        </div>

        <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8  text-xl-left text-lg-left text-md-center text-center  pl-4  p-md-0   ">
            <div class="row align-items-center">

                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 ml-md-4  mt-3 ">
                    <h6 class="font-weight-bold" style="color:#022A5E; line-height:15px;">@data.headerPresidentName</h6>
                </div>

                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12  ml-md-4  ">
                    <p style="color:#022A5E; line-height:normal;  ">@data.headerPresidentDescription</p>
                </div>

            </div>

        </div>

    </div>

</div>


