@model  List<KENTAS.Helper.getGalryModel>

@{
    ViewBag.Title = "Resim Galerisi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.11.1/baguetteBox.css" rel="stylesheet" />
    <style type="text/css">

        .filter_btn {
            display: block;
            list-style: none;
            width: 100%;
            text-align: center;
        }

            .filter_btn li {
                display: inline-block;
            }
        .my_btn {
            text-align: center;
            height: 250px;
            width: 250px;
            display: flex;
           
            background-size: cover;
            color: #fff;
            text-shadow: 1px 1px black;
            text-align: center;
            flex-direction: column-reverse;
        }

        .backpage:visited, .backpage:link {
            background-color: midnightblue;
            color: white;
            padding: 5px 5px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }
        .backpage:hover, .backpage:active {
            background-color: white;
            color: midnightblue;
        }

        .my_btn {
            text-align: center;
            height: 300px;
            width: 370px;
            display: flex;
            background-size: cover !important;
            color: #fff;
            text-shadow: 1px 1px black;
            text-align: center;
            flex-direction: column-reverse;
        }

        @@media only screen and (min-width: 420px) {
            .my_btn {
                height: 325px;
                width: 350px;
                margin-left: 5px;
                margin-right: 5px;
            }
        }

        .tz-gallery img {
            border-radius: 5px;
            object-fit: cover;
        }
    </style>
}

<div class="container bgwhite mt-4 ">

    <div class="row p-1">

        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 radius_contains p-3" style="background-color:#00a0af; background-image:url(/Content/images/g_bg.png)">
            <h6 class="pl-3 my-auto" style="color:white">GALERİ</h6>
        </div>

    </div>
    <h6 class="my-auto p-2" style="color:midnightblue">KENTAŞ FOTOĞRAF GALERİ - <a class="backpage" href="../Galeri/">Geri Dön </a></h6>


    <div class="tz-gallery pt-2" style="height:800px; overflow-x:hidden; overflow-y:inherit;">
        <div class="row ">
            <div class="mbr-gallery-filter container gallery-filter-active p-0">
                @if (Model.Count == 0)
                {
                    <div style="height:calc(100vh - 890px); text-align:center; vertical-align:middle; ">
                        <h1 class="mt-4">Resim Bulunamadı. <small style="font-size:1.3rem;"><a href="../Galeri/Index">Geri dön</a></small></h1>
                    </div>
                }
                <ul buttons="0" class="filter_btn p-0">
                    @using (KENTAS.Models.Entities ct = new KENTAS.Models.Entities())
                    {
                        foreach (var item in Model)
                        {
                            <li><a class="" href="@Url.Content(item.photoGaleryImage)"><img class="img-rounded my_btn" src="@Url.Content(item.photoGaleryImage)" /></a></li>
                        }
                    }
                </ul>
            </div>
        </div>

    </div>



