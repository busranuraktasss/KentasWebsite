                        </a>

                    </div>
                }
            </div>
        </div>
    </div>*@


</div>


@section scripts{
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.11.1/baguetteBox.js"></script>

    <script type="text/javascript">
        $((_$) => {
            baguetteBox.run('.tz-gallery');
        });
    </script>

}
