    @RenderSection("scripts", required: false)
    <script type="text/javascript">

        $(() => {
            $("#services").select2({
                multiple: true,
                placeholder: "Lütfen Mekan Seçiniz...",
                icon: 'warning',
            });

            getSelectOurServices();
        })


        var getSelectOurServices = () => {
            $(document).ready(function () {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("getSelectOurServices", "Home")',
                    data: "json",
                    success: function (data) {

                        for (var i = 0; i < data.data.length; i++) {
                            var s = s + '<option value="' + data.data[i].Id + '">' + data.data[i].Title + '</option>';
                        }
                        $("#services").html(s);
                    }
                });
            });
        }
        var clearForm = () => {
            $('#services').val([]).trigger('change');
            $('#tcno').val('');
            $('#name').val('');
            $('#surname').val('');
            $('#phone').val('');
            $('#Adress').val('');
            $('#plaka').val('');
        }


        var saveBasvuruFormu = () => {
            let hata = false;
            let MekanIds = $('.js-example-basic-multiple').val();
            if (MekanIds == "") {
                alert('Lütfen mekan seçiniz.');
            } else {
                 $('#basvuru-form [required]').each((index, item) => {
                    if (!item.value) {
                        item.focus();
                        alert('Eksik yerleri doldurunuz. Detay: ' + item.getAttribute('placeholder'));
                        hata = true;
                        return false;
                    }
                 })
                if (!hata) {
                    var Tcno = document.getElementById('tcno').value;
                    var Name = document.getElementById('name').value;
                    var Surname = document.getElementById('surname').value;
                    var Adress = document.getElementById('Adress').value;
                    var Plaka = document.getElementById('plaka').value;
                    var Aractip = document.getElementById('aractip').value;
                    var Phone = document.getElementById('phone').value;
                    console.log(Tcno + Name + Surname + Adress + Plaka + Aractip + Phone);

                    $.post('@Url.Action("PlateControl", "Home")', { plaka: Plaka }, (d, s) => {
                        console.log(d.data);
                    if (d.data == true) {

                          alert('Plakaya ait başvuru yapılmıştır.Kaydınızın yanlış olduğunu düşünüyorsanız lütfen bizimle iletişime geçiniz.');

                    } else {
                       $.post('@Url.Action("addBasvuruFormu", "Home")', {
                        mekanIds: MekanIds,
                        tcno: Tcno,
                        name: Name,
                        surname: Surname,
                        Adress: Adress,
                        plaka: Plaka,
                        aractip: Aractip,
                        phone: Phone,
                    }, (d, s) => {
                        if (s === "success") {
                            if (d.status == true) {
                                clearForm();
                                $('#basvuruFormuModal').modal('hide');
                                alert("Başvurunuz alınmıştır en kısa sürede size dönüş sağlanacaktır.\nAnlayışınız için şimdiden teşekkürler.");
                            }
                            else {
                                alert("Hata!");
                            }
                        }

                    })
                    }

                })

                }
            }
        }

        function isNumberKey(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }

        function phoneMask() {
            var txt = $(this).val().replace(/\D/g, '');
            let newtxt = '';
            for (let i = 0; i < Math.min(txt.length, 10); i++) {
                newtxt += txt[i];
                if ((i == 2) || (i == 5)) {
                    newtxt += ' ';
                }
            }
            if (newtxt[newtxt.length - 1] == ' ') newtxt = newtxt.substring(0, newtxt.length - 1);
            this.value = newtxt;

        }
        $('[type="tel"]').keyup(phoneMask);
    </script>
